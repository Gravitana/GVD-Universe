<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="heading_text_style">
        <item name="android:textSize">@dimen/heading_size</item>
        <item name="android:layout_marginBottom">@dimen/heading_margin_vertical</item>
        <item name="android:padding">@dimen/heading_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="pod_text_style">
        <item name="android:textSize">@dimen/pod_text_size</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="pod_title_style">
        <item name="android:textSize">@dimen/pod_text_size</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>