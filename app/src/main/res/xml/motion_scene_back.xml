<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetStart="@layout/fragment_pod_coordinator"
        motion:constraintSetEnd="@layout/fragment_pod_start"
        motion:duration="1000">

        <OnSwipe
            motion:touchAnchorId="@id/input_layout"
            motion:touchAnchorSide="middle"
            motion:dragDirection="dragRight"/>
    </Transition>
</MotionScene>